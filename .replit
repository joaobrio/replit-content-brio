# Arquivo de configuração para build de produção no Replit

# Exclui arquivos de teste do build
[[build.exclude]]
pattern = "test/**"

[[build.exclude]]
pattern = "**/*.test.*"

[[build.exclude]]
pattern = "**/*.spec.*"

[[build.exclude]]
pattern = "__tests__/**"

# Define o comando de build para produção
[deployment]
build = ["sh", "-c", "node build-fix.js"]
run = ["sh", "-c", "NODE_ENV=production npm start"]

# Variáveis de ambiente para produção
[env]
NODE_ENV = "production"
SKIP_TEST_FILES = "true"

# Headers de segurança
[[deployment.responseHeaders]]
path = "/*"
name = "X-Content-Type-Options"
value = "nosniff"

[[deployment.responseHeaders]]
path = "/*"
name = "X-Frame-Options"
value = "DENY"

[[deployment.responseHeaders]]
path = "/*"
name = "Strict-Transport-Security"
value = "max-age=31536000; includeSubDomains"
