# Exemplo de variáveis de ambiente para Vercel

# Banco de Dados (Supabase ou Neon)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# APIs de IA
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Cloudinary (para uploads)
CLOUDINARY_CLOUD_NAME=seu-cloud-name
CLOUDINARY_API_KEY=sua-api-key
CLOUDINARY_API_SECRET=seu-secret

# Instagram API (se usar)
INSTAGRAM_CLIENT_ID=seu-client-id
INSTAGRAM_CLIENT_SECRET=seu-client-secret

# Sessão
SESSION_SECRET=uma-string-aleatoria-segura

# Ambiente
NODE_ENV=production
VERCEL=1

# URL do Frontend (para CORS)
FRONTEND_URL=https://seu-app.vercel.app
